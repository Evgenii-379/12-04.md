Задание 1

SELECT CONCAT(staff.first_name,' ', staff.last_name) AS staff, address.city_id, city.city, (SELECT COUNT('customer_id') FROM store)
FROM address
LEFT JOIN customer ON address.address_id=customer.address_id
RIGHT JOIN staff ON address.address_id=staff.address_id
JOIN city ON address.city_id=city.city_id;

Задание 2

SELECT AVG(film.length) FROM film; --вывод средней продолжительности фильма

SELECT film_id, AVG(film.length), COUNT(*) 
FROM film WHERE film.length > film.length > 115 GROUP BY film_id;

Задание 3

SELECT payment.payment_id, rental.rental_id, rental.rental_date, MONTH(payment_date), MAX(amount), COUNT(rental.rental_id)
FROM payment
JOIN rental ON rental.rental_id=payment.rental_id
GROUP BY payment_id, MONTH(payment_date);


